<!-------------------SCRIPTS/JQUERY (PART ONE)------------------->

<!-----------Scroll To Top Script----------->
<script type="text/javascript" src="https://static.tumblr.com/ikeq9mi/DfYl6o46t/scrolltotop.min.js"></script>
<!-----------Scroll To Top Script----------->

<script>
 $(document).ready(function(){
{block:IndexPage}
{block:ifheader}
    // appear/disappear sidebar script
    var ghostSidebar = 800;
        $(window).scroll(function() {
        var scroll = getCurrentScroll();
        if ( scroll >= ghostSidebar ) {
            $('.sidebar').addClass('ghost');
        }
        else {
            $('.sidebar').removeClass('ghost');
        }
 });
    function getCurrentScroll() {
        return window.pageYOffset;
    } // appear/disappear sidebar script
{/block:ifheader}
{/block:IndexPage}
    //click to posts script
    $(".enter").click(function (){
                $('html, body').animate({
                    scrollTop: $(".wrap").offset().top
                }, 2000);
    });
     //search suggestions script    
    $('.search').submit(function(event){
       var value = $('input:first').val();
       location.replace('https://{Name}.tumblr.com/tagged/' + value);
    });
});
</script>
 
<!-------------------SCRIPTS/JQUERY (PART ONE)------------------->
 
